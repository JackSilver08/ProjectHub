<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROJECTHUB</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-3">

        <!-- LEFT -->
        <a class="navbar-brand fw-bold" asp-page="/Index">
            PROJECTHUB
        </a>

        <!-- TOGGLER -->
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#topNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- CENTER (COLLAPSE ONLY SEARCH) -->
        <div class="collapse navbar-collapse" id="topNav">
            <form class="d-flex mx-lg-auto w-50">
                <input class="form-control"
                       type="search"
                       placeholder="Search projects, tasks..." />
            </form>
        </div>

        <!-- RIGHT (NEVER COLLAPSE) -->
        <div class="d-flex align-items-center gap-3 ms-3">

            <!-- 🔔 NOTIFICATIONS -->
            <div class="dropdown">
                <button class="btn btn-light position-relative"
                        type="button"
                        data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow"
                    style="width:300px">
                    <li class="dropdown-header fw-semibold">Notifications</li>
                    <li><a class="dropdown-item small" href="#">📝 New task assigned</a></li>
                    <li><a class="dropdown-item small" href="#">💬 New comment</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-center small"
                           asp-page="/Dashboard/Notifications">
                            View all
                        </a>
                    </li>
                </ul>
            </div>

            <!-- ➕ CREATE -->
            <a class="btn btn-primary btn-sm"
               asp-page="/Projects/Create">
                + Create
            </a>

            <!-- 👤 USER -->
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle fw-semibold"
                            type="button"
                            data-bs-toggle="dropdown">
                        👋 @User.Identity.Name
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li>
                            <a class="dropdown-item" asp-page="/Account/Profile">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-danger"
                               asp-page="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a class="nav-link" asp-page="/Account/Login">Login</a>
            }

        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <div class="container-fluid">
        <div class="row">

            <!-- SIDEBAR -->
            <aside class="col-2 bg-light vh-100 border-end pt-3">
                @await Html.PartialAsync("_Sidebar")
            </aside>

            <!-- CONTENT -->
            <main class="col-10 p-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
