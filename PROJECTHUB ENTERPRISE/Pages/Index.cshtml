@page
@model IndexModel

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        height: 100%;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid #e0e0e0;
        margin-bottom: 1rem;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(1, 55, 62, 0.12);
        }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .projects-icon {
        background: rgba(0, 184, 148, 0.1);
        color: #00b894;
    }

    .tasks-icon {
        background: rgba(1, 55, 62, 0.1);
        color: #01373e;
    }

    .completed-icon {
        background: rgba(37, 99, 235, 0.1);
        color: #2563eb;
    }

    .empty-state {
        padding: 3rem 1rem;
        text-align: center;
        color: #666666;
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }

    .animate-fadeInUp {
        animation: fadeInUp 0.6s ease forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-2" style="background: linear-gradient(135deg, #01373e, #00b894); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; color: transparent;">
                Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back! Here's what's happening with your projects.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <!-- Total Projects -->
        <div class="col-xl-4 col-md-6">
            <div class="stat-card animate-fadeInUp">
                <div class="stat-icon projects-icon">
                    <i class="bi bi-folder2-open fs-4"></i>
                </div>
                <h6 class="text-muted mb-2">TOTAL PROJECTS</h6>
                <div class="d-flex align-items-end justify-content-between">
                    <h2 class="fw-bold mb-0">@Model.Stats.TotalProjects</h2>
                    <span class="text-success small">
                        <i class="bi bi-arrow-up-right me-1"></i>
                        Manage your projects
                    </span>
                </div>
            </div>
        </div>

        <!-- Open Tasks -->
        <div class="col-xl-4 col-md-6">
            <div class="stat-card animate-fadeInUp">
                <div class="stat-icon tasks-icon">
                    <i class="bi bi-list-task fs-4"></i>
                </div>
                <h6 class="text-muted mb-2">OPEN TASKS</h6>
                <div class="d-flex align-items-end justify-content-between">
                    <h2 class="fw-bold mb-0">@Model.Stats.OpenTasks</h2>
                    <span class="text-warning small">
                        <i class="bi bi-clock me-1"></i>
                        Needs attention
                    </span>
                </div>
            </div>
        </div>

        <!-- Completed Tasks -->
        <div class="col-xl-4 col-md-6">
            <div class="stat-card animate-fadeInUp">
                <div class="stat-icon completed-icon">
                    <i class="bi bi-check-circle fs-4"></i>
                </div>
                <h6 class="text-muted mb-2">COMPLETED TASKS</h6>
                <div class="d-flex align-items-end justify-content-between">
                    <h2 class="fw-bold mb-0">@Model.Stats.CompletedTasks</h2>
                    <span class="text-success small">
                        <i class="bi bi-check-lg me-1"></i>
                        Great work!
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Your Projects Section -->
    <div class="card border-0 shadow-sm animate-fadeInUp">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
            <div>
                <h5 class="fw-bold mb-0" style="background: linear-gradient(135deg, #01373e, #00b894); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; color: transparent;">
                    Your Projects
                </h5>
                <p class="text-muted small mb-0">Projects you're currently involved in</p>
            </div>
            <a asp-page="/Projects/Index" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-grid me-1"></i>View All
            </a>
        </div>

        <div class="card-body p-0">
            @if (Model.Projects.Count == 0)
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-folder-x"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">No projects yet</h5>
                    <p class="text-muted mb-4">Get started by creating your first project</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createProjectModal">
                        <i class="bi bi-plus-lg me-2"></i>Create Project
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">PROJECT</th>
                                <th>ROLE</th>
                                <th>STATUS</th>
                                <th class="text-end pe-4">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Projects)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">@p.Name</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-person me-1"></i>@p.Role
                                        </span>
                                    </td>
                                    <td>
                                        @if (p.Status == "Active")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                                @p.Status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill">
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                                @p.Status
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <!-- VIEW -->
                                            <a asp-page="/Projects/Details"
                                               asp-route-id="@p.ProjectId"
                                               class="btn btn-outline-primary"
                                               title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            @if (p.Role == "Manager")
                                            {
                                                <!-- EDIT -->
                                                <button class="btn btn-outline-secondary"
                                                        title="Edit"
                                                        onclick="openEditProject('@p.ProjectId', '@p.Name', '@p.Status')">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>

                                                @if (p.Status == "Active")
                                                {
                                                    <!-- ARCHIVE -->
                                                    <button class="btn btn-outline-danger"
                                                            title="Archive"
                                                            onclick="toggleProject('@p.ProjectId', true)">
                                                        <i class="bi bi-archive"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <!-- RESTORE -->
                                                    <button class="btn btn-outline-success"
                                                            title="Restore"
                                                            onclick="toggleProject('@p.ProjectId', false)">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (Model.Projects.Count > 0)
        {
            <div class="card-footer bg-white border-top py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted small">Hiện @Model.Projects.Count active projects</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Edit Project Modal -->
<div class="modal fade" id="editProjectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" style="background: linear-gradient(135deg, #01373e, #00b894); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; color: transparent;">
                    <i class="bi bi-pencil-square me-2"></i>Edit Project
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="editProjectId" />

                <div class="mb-4">
                    <label class="form-label fw-semibold">Project Name</label>
                    <input class="form-control" id="editProjectName" placeholder="Enter project name" />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea class="form-control" id="editProjectDescription" rows="3" placeholder="Project description"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <select class="form-select" id="editProjectStatus">
                        <option value="false">Active</option>
                        <option value="true">Archived</option>
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="saveProject()">
                    <i class="bi bi-save me-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Edit Project Modal
        function openEditProject(id, name, status) {
            document.getElementById("editProjectId").value = id;
            document.getElementById("editProjectName").value = name;
            document.getElementById("editProjectStatus").value = status === "Archived" ? "true" : "false";

            // Show modal with animation
            const modal = new bootstrap.Modal(document.getElementById("editProjectModal"));
            modal.show();
        }

        // Save Project
        async function saveProject() {
            const data = {
                projectId: document.getElementById("editProjectId").value,
                name: document.getElementById("editProjectName").value,
                description: document.getElementById("editProjectDescription").value,
                isArchived: document.getElementById("editProjectStatus").value === "true"
            };

            try {
                const res = await fetch("?handler=Edit", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(data)
                });

                const result = await res.json();
                if (result.success) {
                    // Show success message
                    showToast('Project updated successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('Update failed. Please try again.', 'error');
                }
            } catch (error) {
                showToast('Network error. Please check your connection.', 'error');
            }
        }

        // Toggle Project Archive Status
        async function toggleProject(projectId, archive) {
            const action = archive ? 'archive' : 'restore';
            if (!confirm(`Are you sure you want to ${action} this project?`)) return;

            try {
                const res = await fetch("?handler=Toggle", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ projectId, archive })
                });

                const result = await res.json();
                if (result.success) {
                    showToast(`Project ${action}d successfully!`, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('Operation failed. Please try again.', 'error');
                }
            } catch (error) {
                showToast('Network error. Please check your connection.', 'error');
            }
        }

        // Toast notification function
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toastId = 'toast-' + Date.now();

            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.id = toastId;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');

            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle'} me-2"></i>
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;

            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast, { delay: 3000 });
            bsToast.show();

            // Remove toast after it's hidden
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        // Create toast container if it doesn't exist
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
            return container;
        }

        // Initialize animations on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fadeInUp');
                    }
                });
            }, observerOptions);

            // Observe all stat cards and tables
            document.querySelectorAll('.stat-card, .card, table').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
}