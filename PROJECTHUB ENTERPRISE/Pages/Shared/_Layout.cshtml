<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROJECTHUB</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg px-4">

        <!-- LEFT: Brand & Mobile Toggle -->
        <div class="d-flex align-items-center">
            <!-- Sidebar Toggle for Mobile -->
            <button class="btn btn-light d-lg-none me-3 sidebar-toggle">
                <i class="bi bi-list"></i>
            </button>

            <a class="navbar-brand fw-bold" asp-page="/Index">
                PROJECTHUB
            </a>
        </div>

        <!-- TOGGLER for Search on Mobile -->
        <button class="navbar-toggler d-lg-none"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#topNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- CENTER: Search Form -->
        <div class="collapse navbar-collapse" id="topNav">
            <form class="d-flex mx-lg-auto w-50">
                <input class="form-control"
                       type="search"
                       placeholder="Search projects, tasks..." />
            </form>
        </div>

        <!-- RIGHT: User Actions -->
        <div class="d-flex align-items-center gap-3 ms-3">

            <!-- 🔔 NOTIFICATIONS -->
            <div class="dropdown notification-dropdown">
                <button class="btn btn-light position-relative"
                        data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>

                    <span id="notify-badge"
                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
                    </span>
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li class="dropdown-header fw-semibold">Notifications</li>
                    <div id="notify-list"></div>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-center small"
                           asp-page="/Dashboard/Notifications">
                            View all
                        </a>
                    </li>
                </ul>
            </div>

            <!-- ➕ CREATE -->
            <button class="btn btn-create"
                    data-bs-toggle="modal"
                    data-bs-target="#createProjectModal">
                <i class="bi bi-plus-lg"></i> Create
            </button>

            <!-- 👤 USER -->
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                var avatar = User.FindFirst("AvatarUrl")?.Value
                ?? "/images/avatar-default.png";

                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle d-flex align-items-center gap-2"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            id="userDropdownBtn">

                        <img src="@avatar"
                             class="rounded-circle border"
                             width="32"
                             height="32"
                             style="object-fit: cover;" />

                        <span class="fw-semibold">
                            @User.Identity.Name
                        </span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdownBtn">
                        <li>
                            <a class="dropdown-item" asp-page="/Account/Profile">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-danger" asp-page="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a class="nav-link text-white" asp-page="/Account/Login">Login</a>
            }

        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <div class="container-fluid">
        <div class="row">

            <!-- SIDEBAR -->
            <aside class="col-lg-2 sidebar d-none d-lg-block">
                @await Html.PartialAsync("_Sidebar")
            </aside>

            <!-- CONTENT -->
            <main class="col-lg-10 p-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <!-- Bootstrap 5 JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SignalR client -->
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr/dist/browser/signalr.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
          

            // Sidebar toggle for mobile
            document.querySelector('.sidebar-toggle')?.addEventListener('click', function() {
                document.querySelector('.sidebar').classList.toggle('d-block');
                document.querySelector('.sidebar').classList.toggle('show');
            });

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(e) {
                const sidebar = document.querySelector('.sidebar');
                if (window.innerWidth < 992 && sidebar &&
                    !e.target.closest('.sidebar') &&
                    !e.target.closest('.sidebar-toggle')) {
                    sidebar.classList.remove('d-block', 'show');
                }
            });

            // Animate elements on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fadeInUp');
                    }
                });
            }, observerOptions);

            // Observe elements you want to animate
            document.querySelectorAll('.card, .table, .alert').forEach(el => observer.observe(el));
        });

        // Notification functions
        async function loadNotifications() {
            const res = await fetch('/Dashboard/Notifications?handler=UnreadNotifications');
            if (!res.ok) return;

            const data = await res.json();

            const badge = document.querySelector("#notify-badge");
            const list = document.querySelector("#notify-list");

            // 🔔 badge
            badge.innerText = data.length;
            badge.classList.toggle("d-none", data.length === 0);

            // 📋 list
            list.innerHTML = "";
            data.forEach(n => {
                const li = document.createElement("li");
                li.innerHTML = `
                    <a class="dropdown-item small"
                       href="${n.linkUrl}">
                       <div class="d-flex align-items-start">
                           <i class="bi bi-chat-text me-2 mt-1"></i>
                           <div>
                               <div class="fw-medium">${n.message}</div>
                               <div class="text-muted small mt-1">${n.createdAt}</div>
                           </div>
                       </div>
                    </a>`;
                list.appendChild(li);
            });
        }

        // Load notifications on page load
        loadNotifications();

        // Auto refresh every 15s
        setInterval(loadNotifications, 15000);
    </script>

    <!-- CREATE PROJECT MODAL -->
    <div class="modal fade" id="createProjectModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <form method="post" asp-page="/Projects/Create">

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold text-white">Create New Project</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">

                        <!-- Project Name -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Project Name</label>
                            <input name="Name"
                                   class="form-control"
                                   required
                                   placeholder="Enter project name" />
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="Description"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Short project description"></textarea>
                        </div>

                        <!-- Privacy -->
                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="IsPrivate"
                                   id="isPrivate">
                            <label class="form-check-label" for="isPrivate">
                                <i class="bi bi-lock me-2"></i>Private project
                            </label>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-light"
                                data-bs-dismiss="modal">
                            Cancel
                        </button>

                        <button type="submit"
                                class="btn btn-create">
                            <i class="bi bi-plus-circle me-2"></i>Create Project
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>

</body>
</html>