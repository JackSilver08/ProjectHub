@page
@model PROJECTHUB_ENTERPRISE.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5" style="max-width:420px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">

            <h4 class="fw-bold text-center mb-3">Forgot password</h4>
            <p class="text-muted text-center small mb-4">
                Enter your email to reset password
            </p>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email"
                       id="emailInput"
                       class="form-control"
                       placeholder="your@email.com"
                       required />
            </div>

            <button class="btn btn-primary w-100" id="resetBtn">
                Reset password
            </button>

            <div class="text-center mt-3">
                <a asp-page="/Account/Login"
                   class="small text-decoration-none">
                    Back to login
                </a>    
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="passwordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title fw-bold">New password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <p class="text-muted small mb-2">
                    Please copy and save your new password
                </p>

                <input type="text"
                       id="newPasswordInput"
                       class="form-control text-center fw-semibold"
                       readonly />

                <button class="btn btn-outline-primary mt-3"
                        id="copyBtn">
                    Copy password
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const resetBtn = document.getElementById("resetBtn");
        const emailInput = document.getElementById("emailInput");

        const passwordInput = document.getElementById("newPasswordInput");
        const copyBtn = document.getElementById("copyBtn");

        resetBtn.addEventListener("click", async () => {
            const email = emailInput.value.trim();

            if (!email) {
                alert("Please enter email");
                return;
            }

            const res = await fetch("?handler=ResetPassword", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken":
                        document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify(email)
            });

            if (!res.ok) {
                alert("Email not found");
                return;
            }

            const data = await res.json();

            // Show password in modal
            passwordInput.value = data.password;

            const modal = new bootstrap.Modal(
                document.getElementById("passwordModal")
            );
            modal.show();
        });

        // COPY BUTTON
        copyBtn.addEventListener("click", () => {
            passwordInput.select();
            passwordInput.setSelectionRange(0, 99999);
            document.execCommand("copy");

            copyBtn.innerText = "Copied!";
            setTimeout(() => copyBtn.innerText = "Copy password", 1500);
        });
    </script>
}
